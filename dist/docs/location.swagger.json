{
    "openapi": "3.0.0",
    "info": {
        "title": "Locations API",
        "description": "API for managing Rick and Morty locations.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "tags": [
        {
            "name": "Locations",
            "description": "All location-related endpoints."
        }
    ],
    "paths": {
        "/api/locations": {
            "get": {
                "summary": "Retrieves a list of locations with optional filters.",
                "tags": [
                    "Locations"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "name",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Filter locations by name."
                    },
                    {
                        "in": "query",
                        "name": "type",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Filter locations by type."
                    },
                    {
                        "in": "query",
                        "name": "dimension",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Filter locations by dimension."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A successful response with a list of locations.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Location"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Creates a new location.",
                "tags": [
                    "Locations"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewLocation"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Location created successfully.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Location"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input data.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/locations/{id}": {
            "get": {
                "summary": "Retrieves a single location by ID.",
                "tags": [
                    "Locations"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "schema": {
                            "type": "integer"
                        },
                        "required": true,
                        "description": "The unique ID of the location."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The location was found successfully.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Location"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Location not found.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Updates an existing location.",
                "tags": [
                    "Locations"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "schema": {
                            "type": "integer"
                        },
                        "required": true,
                        "description": "The ID of the location to update."
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewLocation"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Location updated successfully.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Location"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Location not found.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Deletes a location.",
                "tags": [
                    "Locations"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "schema": {
                            "type": "integer"
                        },
                        "required": true,
                        "description": "The ID of the location to delete."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Location deleted successfully.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Location deleted successfully"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Location not found.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Location": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "The location's unique ID."
                    },
                    "name": {
                        "type": "string",
                        "description": "The location's name."
                    },
                    "type": {
                        "type": "string",
                        "description": "The location's type."
                    },
                    "dimension": {
                        "type": "string",
                        "description": "The dimension where the location exists."
                    },
                    "residents": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "A list of resident URLs who live in this location."
                    },
                    "url": {
                        "type": "string",
                        "description": "The location's URL."
                    },
                    "created": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Creation date of the location record."
                    }
                }
            },
            "NewLocation": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "type",
                    "dimension"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "The location's unique ID."
                    },
                    "name": {
                        "type": "string",
                        "description": "The location's name."
                    },
                    "type": {
                        "type": "string",
                        "description": "The location's type."
                    },
                    "dimension": {
                        "type": "string",
                        "description": "The dimension where the location exists."
                    },
                    "residents": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "A list of resident URLs who live in this location."
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string",
                        "description": "A brief error message."
                    },
                    "details": {
                        "type": "string",
                        "description": "More detailed information about the error."
                    }
                }
            }
        }
    }
}
